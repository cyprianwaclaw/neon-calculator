{
  "compilerOptions": {
    "skipLibCheck": true,
    "types": ["vue"],
    "noImplicitAny": false,
    "strict": false,
    "noEmitOnError": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/store/*": ["./store/*"],
      "@/components/*": ["./components/*"]
    }
  },
  "include": [
    "env.d.ts",
    ".nuxt/nuxt.d.ts",
    "**/*"
  ]
}